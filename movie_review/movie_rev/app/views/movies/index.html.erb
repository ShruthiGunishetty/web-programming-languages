<h1>Listing movies</h1>
<h3 class="a"><%= link_to 'New movie', new_movie_path %></h2>

 <body>
<table border="1" align="center">
  <tr>
    <th>Movie_title</th>
    <th>year</th>
	<th>IMDB_rating</th>
	<th>descirption</th>
	<th>display movie </th>
	<th>edit movie </th>
	<th> delete movie </th>
	<th>image </th>
  </tr>
 
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
	  <td><%= movie.rating %></td>
	  <td><%= movie.description %></td>
	  <td><%= link_to 'Show', movie_path(movie) %></td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
	  <td><%= link_to 'Destroy', movie_path(movie),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
	  <td><img src="/img/<%= movie.id%>.jpg" alt="/img/<%= movie.id%>.jpg" height="100" width="100">
    </tr>
  <% end %>

</table>
</body>